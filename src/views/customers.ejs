<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>N°</td>
            <td>Nombre</td>
            <td>Dirección</td>
            <td>Teléfono</td>
            <td>Acción</td>
          </tr>
        </thead>
        <tbody>
        
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="email"
            name="address"
            placeholder="Address"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="phone"
            placeholder="Phone"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-info">Guardar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
